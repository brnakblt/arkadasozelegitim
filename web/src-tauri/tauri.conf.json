{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "arkadas-desktop",
  "version": "0.1.0",
  "identifier": "com.arkadasozelegitim.desktop",
  "build": {
    "frontendDist": "../out",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Arkadaş Özel Eğitim",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; img-src 'self' http://localhost:1337 http://127.0.0.1:1337 asset: data: blob:; connect-src 'self' http://localhost:1337 http://127.0.0.1:1337; style-src 'self' 'unsafe-inline'; script-src 'self' 'unsafe-eval' 'unsafe-inline';"
    }
  },
  "bundle": {
    "active": true,
    "targets": [
      "deb",
      "nsis",
      "msi",
      "app",
      "dmg"
    ],
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "linux": {
      "deb": {
        "files": {}
      }
    }
  }
}