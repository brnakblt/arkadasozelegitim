{
  "$schema": "../node_modules/@tauri-apps/cli/config.schema.json",
  "productName": "Arkadaş",
  "version": "1.0.0",
  "identifier": "com.arkadasozelegitim.desktop",
  "build": {
    "frontendDist": "../out",
    "devUrl": "http://localhost:3000",
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build"
  },
  "app": {
    "windows": [
      {
        "title": "Arkadaş Özel Eğitim",
        "width": 1400,
        "height": 900,
        "minWidth": 1024,
        "minHeight": 768,
        "resizable": true,
        "fullscreen": false,
        "center": true,
        "decorations": true,
        "transparent": false
      }
    ],
    "security": {
      "csp": {
        "default-src": "'self'",
        "img-src": "'self' http://localhost:1337 http://127.0.0.1:1337 https://*.googleapis.com https://*.gstatic.com asset: data: blob:",
        "connect-src": "'self' http://localhost:1337 http://127.0.0.1:1337 http://localhost:8000 http://localhost:4000 https://*.googleapis.com wss:",
        "style-src": "'self' 'unsafe-inline' https://fonts.googleapis.com",
        "font-src": "'self' https://fonts.gstatic.com data:",
        "script-src": "'self' 'unsafe-eval' 'unsafe-inline'",
        "frame-src": "'self' https://www.google.com"
      }
    },
    "trayIcon": {
      "iconPath": "icons/32x32.png",
      "iconAsTemplate": true
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "category": "Education",
    "shortDescription": "Arkadaş Özel Eğitim ERP Sistemi",
    "longDescription": "Arkadaş Özel Eğitim Merkezi için kapsamlı ERP sistemi. Öğrenci yönetimi, devam takibi, faturalama, servis takibi ve MEBBIS entegrasyonu.",
    "copyright": "© 2024 Arkadaş Özel Eğitim",
    "publisher": "Arkadaş Özel Eğitim",
    "windows": {
      "certificateThumbprint": null,
      "digestAlgorithm": "sha256",
      "nsis": {
        "installerIcon": "icons/icon.ico",
        "headerImage": null,
        "sidebarImage": null,
        "installMode": "currentUser",
        "languages": [
          "Turkish"
        ],
        "displayLanguageSelector": false
      },
      "wix": null
    },
    "linux": {
      "appId": "com.arkadasozelegitim.desktop",
      "deb": {
        "depends": [
          "libwebkit2gtk-4.1-0",
          "libgtk-3-0"
        ],
        "section": "education"
      },
      "rpm": {
        "epoch": 0,
        "release": "1"
      }
    },
    "macOS": {
      "frameworks": [],
      "minimumSystemVersion": "10.15",
      "exceptionDomain": null,
      "signingIdentity": null,
      "providerShortName": null,
      "entitlements": null
    }
  },
  "plugins": {
    "deep-link": {
      "mobile": [],
      "desktop": {
        "schemes": [
          "arkadas"
        ]
      }
    }
  }
}