# Strapi Environment Variables Example
# Copy this to .env and fill in your values

# ====================================
# DATABASE CONFIGURATION
# ====================================
# Development (SQLite)
# DATABASE_CLIENT=sqlite
# DATABASE_FILENAME=.tmp/data.db

# Production (PostgreSQL) - RECOMMENDED
DATABASE_CLIENT=postgres
DATABASE_HOST=localhost
DATABASE_PORT=5432
DATABASE_NAME=arkadaserp
DATABASE_USERNAME=strapi
DATABASE_PASSWORD=your_secure_password_here
DATABASE_SSL=false
# DATABASE_SCHEMA=public

# ====================================
# SECURITY SECRETS
# ====================================
# Generate secure secrets with: openssl rand -base64 32
ADMIN_JWT_SECRET=your_admin_jwt_secret_here
APP_KEYS=key1_base64,key2_base64,key3_base64,key4_base64
API_TOKEN_SALT=your_api_token_salt_here
JWT_SECRET=your_jwt_secret_here

# ====================================
# NEXTCLOUD INTEGRATION
# ====================================
NEXTCLOUD_URL=http://localhost:8080
NEXTCLOUD_ADMIN_USER=admin
NEXTCLOUD_ADMIN_PASSWORD=your_nextcloud_admin_password

# ====================================
# GOOGLE MAPS (for GPS tracking)
# ====================================
# GOOGLE_MAPS_API_KEY=your_google_maps_api_key

# ====================================
# REDIS CACHE (Optional)
# ====================================
# REDIS_URL=redis://localhost:6379
# REDIS_PASSWORD=

# ====================================
# SERVER CONFIGURATION
# ====================================
HOST=0.0.0.0
PORT=1337
