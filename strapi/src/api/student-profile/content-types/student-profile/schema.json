{
    "kind": "collectionType",
    "collectionName": "student_profiles",
    "info": {
        "singularName": "student-profile",
        "pluralName": "student-profiles",
        "displayName": "Student Profile",
        "description": "Öğrenci profil bilgileri"
    },
    "options": {
        "draftAndPublish": false
    },
    "pluginOptions": {},
    "attributes": {
        "studentNumber": {
            "type": "string",
            "unique": true
        },
        "dateOfBirth": {
            "type": "date"
        },
        "gender": {
            "type": "enumeration",
            "enum": [
                "male",
                "female",
                "other"
            ]
        },
        "bloodType": {
            "type": "enumeration",
            "enum": [
                "A_positive",
                "A_negative",
                "B_positive",
                "B_negative",
                "AB_positive",
                "AB_negative",
                "O_positive",
                "O_negative"
            ]
        },
        "disabilityType": {
            "type": "string"
        },
        "disabilityLevel": {
            "type": "enumeration",
            "enum": [
                "mild",
                "moderate",
                "severe",
                "profound"
            ]
        },
        "emergencyContactName": {
            "type": "string"
        },
        "emergencyContactPhone": {
            "type": "string"
        },
        "enrollmentDate": {
            "type": "date"
        },
        "graduationDate": {
            "type": "date"
        },
        "classroom": {
            "type": "string"
        },
        "notes": {
            "type": "richtext"
        },
        "facePhotoUrl": {
            "type": "string"
        },
        "faceEncodingUpdatedAt": {
            "type": "datetime"
        },
        "user": {
            "type": "relation",
            "relation": "oneToOne",
            "target": "plugin::users-permissions.user"
        },
        "parentGuardian": {
            "type": "relation",
            "relation": "manyToOne",
            "target": "plugin::users-permissions.user"
        },
        "facePhoto": {
            "type": "media",
            "multiple": false,
            "required": false,
            "allowedTypes": [
                "images"
            ]
        }
    }
}